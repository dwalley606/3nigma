{
  "name": "3nigma",
  "version": "1.0.0",
  "description": "Experimental E2EE messaging PWA running on the MERN stack",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && npm run start",
    "develop": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "build": "tsc --build",
    "build:server": "tsc --build server",
    "build:client": "tsc --build client",
    "clean": "tsc --build --clean",
    "server": "cd server && npm run dev",
    "render-build": "npm install && npm run build",
    "test:client": "jest --config=jest.client.config.js",
    "test:server": "jest --config=jest.server.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:server": "graphql-codegen --config codegen.server.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwalley606/3nigma.git"
  },
  "author": "Daniel Walley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwalley606/3nigma/issues"
  },
  "homepage": "https://github.com/dwalley606/3nigma#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@graphql-tools/graphql-file-loader": "^8.0.6",
    "@graphql-tools/load": "^8.0.7",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.0.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "3nigma": "file:"
  }
}
